.main-section
  background-color #F6E6D6
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    position relative
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 70px 0
    +above($breakpoints.md)
      padding 0 0 90px 0
    +above($breakpoints.xxl)
      padding 0 0 106px 0

  &__round-orange
    position: absolute
    border-radius: 50%
    background-color #EB7F00
    width 50px
    height: 50px
    right: -20px;
    bottom: 20px;
    +above($breakpoints.sm)
      width: 150px;
      height: 150px;
      right: -195px;
      bottom: 124px;
    +above($breakpoints.md)
      width 180px
      height: 180px
      right: -253px
      bottom: 192px
    +above($breakpoints.xxl)
      width 200px
      height: 200px
      right: -453px
      bottom: 292px

  &__round-green
    position: absolute
    border-radius: 50%
    background-color #B9C878
    width: 80px;
    height: 80px;
    left: -69px;
    top: 186px;
    +above($breakpoints.sm)
      width: 180px;
      height: 180px;
      left: -227px;
      top: 150px;
    +above($breakpoints.md)
      width: 250px;
      height: 250px;
      left: -353px;
      top: 175px;
    +above($breakpoints.xxl)
      width 350px
      height: 350px
      left: -539px
      top: 185px

  &__round-beige
    position: absolute
    border-radius: 50%
    background-color #D4C46E
    width: 30px;
    height: 30px;
    left: 307px;
    top: 148px;
    +above($breakpoints.sm)
      width: 50px;
      height: 50px;
      left: 282px;
      top: 117px;
    +above($breakpoints.md)
      width: 70px;
      height: 70px;
      left: 353px;
      top: 125px;
    +above($breakpoints.xxl)
      width 80px
      height: 80px
      left: 463px
      top: 145px

  &__title,
  &__body-left
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 15px 0
    +above($breakpoints.sm)
      padding 50px 0 30px 0
    +above($breakpoints.md)
      padding 80px 0 35px 0
    +above($breakpoints.xxl)
      padding 104px 0 40px 0

  &__body
    position relative
    z-index 1
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row-reverse
      justify-content flex-end
      gap: 50px
      margin-bottom 50px
    +above($breakpoints.md)
      gap: 72px
      margin-bottom 90px
    +above($breakpoints.xxl)
      margin-bottom 134px
      gap: 105px

  &__body-text
    +above($breakpoints.sm)
      padding-top 58px
    +above($breakpoints.md)
      padding-top 78px
    +above($breakpoints.xxl)
      line-height 133% !important
      padding-top 80px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    padding-top 10px
    +above($breakpoints.sm)
      width 230px
      gap: 8px
      padding-top 20px
    +above($breakpoints.md)
      gap: 12px
      width 240px
      padding-top 25px
    +above($breakpoints.xxl)
      padding-top 30px
      width 251px
      gap: 14px

  &__agree-wrapper
    margin-top 15px
    +above($breakpoints.sm)
      margin-top 15px
    +above($breakpoints.md)
      margin-top 15px
    +above($breakpoints.xxl)
      margin-top 15px

  &__agree-wrapper .agree__text
    display: grid

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content space-between

  &__card
    width 260px !important
    height: 25px
    border-radius: 20px
    color: #fff
    background: linear-gradient(90.00deg, rgb(235, 127, 0),rgb(185, 200, 120) 100%)
    display: flex
    justify-content center
    align-items: center
    +above($breakpoints.sm)
      width 220px !important
      height: 30px
    +above($breakpoints.md)
      width 280px !important
      height: 35px
    +above($breakpoints.xxl)
      width 300px !important
      height: 40px

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width 300px
      right: 0
      bottom: 170px
    +above($breakpoints.md)
      width: 424px;
      bottom: 223px;
    +above($breakpoints.xxl)
      width 560px
      bottom: 248px

  &__text-bg-wrapper
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      border-radius: 50%
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.2)
      width: 215px;
      height: 215px;
      left: 248px;
      bottom: 148px;
      padding: 25px;
    +above($breakpoints.md)
      width: 280px;
      height: 280px;
      left: 300px;
      bottom: 196px;
      padding: 30px;
    +above($breakpoints.xxl)
      padding 35px
      width 340px
      height: 340px
      left: 355px
      bottom: 248px

  &__text-bg
    width 100%
    height: 100%
    border-radius: 50%
    backdrop-filter: blur(20px);
    background: linear-gradient(146.00deg, rgb(255, 255, 255) 13.118%,rgb(247, 230, 215) 88.407%)
