.footer
  &__container
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    background-color #fff
    border-radius: 15px 15px 0 0
    padding 15px 10px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 16px 15px 20px 15px
    +above($breakpoints.md)
      padding 16px 20px 23px 20px
    +above($breakpoints.xxl)
      padding 16px 30px 23px 39px

  &__brand-text
    display: none
    +above($breakpoints.sm)
      display: block
      color: #292929

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 64px
    +above($breakpoints.md)
      width 68px
    +above($breakpoints.xxl)
      width 71px

  &__block
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-end

  &__connection
    display: flex
    align-items: center
    gap: 5px
    color: #3D261B
    +above($breakpoints.sm)
      gap: 12px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 14px
      height: 14px
    +above($breakpoints.md)
      width 15px
      height: 15px
    +above($breakpoints.xxl)
      width 16px
      height: 16px

  &__privacy
    color: #EB7F00
    cursor pointer
    text-decoration: underline
